# redirect
RewriteEngine on

# ethanneff to eneff
RewriteCond %{HTTP_HOST} ^ethanneff\.com$ [OR]
RewriteCond %{HTTP_HOST} ^www\.ethanneff\.com$
RewriteRule ^(.*)$ "https\:\/\/www\.eneff\.com\/$1" [L,R=301]

# force https
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# force www
RewriteCond %{HTTP_HOST} !^www\.
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# custom error pages
ErrorDocument 401 /pages/error/401.html
ErrorDocument 403 /pages/error/403.html
ErrorDocument 404 /pages/error/404.html
ErrorDocument 500 /pages/error/500.html

