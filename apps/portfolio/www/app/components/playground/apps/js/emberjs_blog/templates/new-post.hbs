<h1>New Post</h1>

<form action="">
	<div class="form-group">
		<label for="title">Title</label>
		<!-- input helper with handlebars -->
		<!-- use to bind data to the property (propagates the entire app) -->
		<!-- everything is updated as you type -->
		{{input id="title" class="form-control" value=title}}
	</div>
	<div class="form-group">
		<label for="body">Body</label>
		{{textarea id="body" class="form-control" rows="15" value=body}}
	</div>

	<button class="btn btn-primary" {{action "save"}}>Save</button>
</form>
